<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_make_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/twenty"
    android:background="@drawable/dialog_design_style"
    android:orientation="vertical"
    android:padding="@dimen/twenty">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_magnet_card_name"
        style="@style/text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAGARJUNA YADAIAH CHARY"
        android:textColor="@color/colorPrimaryDark" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_magnet_card_no"
        style="@style/text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:text="NAGARJUNA YADAIAH CHARY2"
        android:textColor="@color/colorPrimaryDark" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_magnet_card_secret_no"
        style="@style/text_view_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:text="NAGARJUNA YADAIAH CHARY3"
        android:textColor="@color/colorPrimaryDark" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_display_track1_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_gravity="center"
        android:text="@string/display_track1_data" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_display_track2_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_gravity="center"
        android:text="@string/display_track2_data" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_display_track3_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten"
        android:layout_gravity="center"
        android:text="@string/display_track3_data" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatButton
            style="@style/login_btn_style_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/four"
            android:layout_marginRight="@dimen/four"
            android:layout_weight="0.34"
            android:text="@string/calculate"
            android:textSize="@dimen/sixteen_sp"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_dlg_cancel"
            style="@style/login_btn_style_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/two"
            android:layout_marginRight="@dimen/two"
            android:layout_weight="0.33"
            android:text="@string/cancel" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_dlg_next"
            style="@style/login_btn_style_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/two"
            android:layout_marginStart="@dimen/two"
            android:layout_weight="0.33"
            android:text="@string/next" />

    </LinearLayout>

</LinearLayout>