<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_make_confirm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten"
    android:background="@drawable/dialog_design_style"
    android:orientation="vertical"
    android:padding="@dimen/twenty">

    <LinearLayout
        android:id="@+id/ll_pin_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            style="@style/text_view_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reason" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_cancel_reason"
            style="@style/spinner_style_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/ten"
        android:layout_marginTop="@dimen/twenty"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- <android.support.v7.widget.AppCompatButton
             style="@style/login_btn_style_square"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:layout_marginEnd="@dimen/four"
             android:layout_marginRight="@dimen/four"
             android:layout_weight="0.34"
             android:text="@string/calculate"
             android:textSize="@dimen/sixteen_sp"
             android:visibility="invisible" />-->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_no"
            style="@style/login_btn_style_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/two"
            android:layout_marginRight="@dimen/two"
            android:layout_weight="0.5"
            android:text="@string/cancel" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_yes"
            style="@style/login_btn_style_square"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/two"
            android:layout_marginStart="@dimen/two"
            android:layout_weight="0.5"
            android:text="@string/send" />

    </LinearLayout>

</LinearLayout>